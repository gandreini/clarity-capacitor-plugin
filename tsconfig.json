{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "lib": ["dom", "es2021"],
      "module": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "dist/esm",
      "sourceMap": true,
      "strict": true,
      "target": "es2021"
    },
    "exclude": ["node_modules", "dist"]
  }